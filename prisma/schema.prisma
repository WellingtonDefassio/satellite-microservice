// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SendMessages {
  id             Int                  @id @default(autoincrement())
  payload        String
  deviceId       String
  device         Devices              @relation(fields: [deviceId], references: [deviceId])
  status         MessageStatus        @default(CREATED)
  deviceGateWay  DeviceGateway
  orbcommMessage SendMessagesOrbcomm?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum MessageStatus {
  CREATED
  SENDED
  TIMEOUT
  FAILED
  CANCELLED
}

model SendMessagesOrbcomm {
  id            Int                  @id @default(autoincrement())
  sendMessageId Int                  @unique
  sendMessage   SendMessages         @relation(fields: [sendMessageId], references: [id])
  deviceId      String
  statusOrbcomm StatusOrbcommMessage?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

}

enum StatusOrbcommMessage {
  SUBMITTED
  RECEIVED
  ERROR
  DELIVERY_FAILED
  TIMEOUT
  CANCELLED
  WAITING
  UNKNOWN
  TRANSMITTED
}

model Devices {
  id               Int            @id @default(autoincrement())
  deviceId         String         @unique
  satelliteGateway DeviceGateway
  status           DeviceStatus
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  messages         SendMessages[]

}

enum DeviceGateway {
  ORBCOMM_V2
  ERIDIUM
}

enum DeviceStatus {
  ACTIVE
  DISABLED
}
