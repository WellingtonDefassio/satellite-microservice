// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SendMessages {
  id             Int                  @id @default(autoincrement())
  payload        String
  deviceId       String
  device         Devices              @relation(fields: [deviceId], references: [deviceId])
  status         MessageStatus        @default(CREATED)
  orbcommMessage SendMessagesOrbcomm?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
}

model SendMessagesOrbcomm {
  id            Int                   @id @default(autoincrement())
  sendMessageId Int                   @unique
  sendMessage   SendMessages          @relation(fields: [sendMessageId], references: [id])
  deviceId      String
  fwrdMessageId String
  statusOrbcomm OrbcommMessageStatus?
  errorId       Int?                  @default(0)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt

}

model Devices {
  id               Int            @id @default(autoincrement())
  deviceId         String         @unique
  gatewayId        Int
  satelliteGateway SatelliteGateway @relation(fields: [gatewayId], references: [id])
  status           DeviceStatus
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  messages         SendMessages[]

}

model SatelliteGateway {
   id               Int            @id @default(autoincrement())
   name             String         @unique
   devices          Devices[]
}

enum DeviceStatus {
  ACTIVE
  DISABLED
}

enum MessageStatus {
  CREATED
  SUBMITTED
  SENDED
  TIMEOUT
  FAILED
  CANCELLED
}

enum OrbcommMessageStatus {
  SUBMITTED
  RECEIVED
  ERROR
  DELIVERY_FAILED
  TIMEOUT
  CANCELLED
  WAITING
  INVALID
  TRANSMITTED
}
